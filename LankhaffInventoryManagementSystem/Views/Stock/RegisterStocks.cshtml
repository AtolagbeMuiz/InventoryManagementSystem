@model RegisterStocks
@{
    ViewData["Title"] = "RegisterStocks";
    ViewBag.PageName = "ADD STOCK TO THE DATABASE";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterStocks">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="StockName" class="control-label">Stock Name</label>
                        <input asp-for="StockName" class="form-control" />
                        <span asp-validation-for="StockName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="StockPrice" class="control-label">Stock Price</label>
                        <input asp-for="StockPrice" class="form-control" />
                        <span asp-validation-for="StockPrice" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" id="btnSubmit" value="Save" class="btn btn-default" />
                    </div>
                </form>

            </div>
        </div>

